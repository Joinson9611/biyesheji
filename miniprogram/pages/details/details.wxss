/* pages/details/details.wxss */
page {
  display: flex;
  flex-direction: column;
}
.detail-image image{
  width: 100%
}
.detail {
  width: 97%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin:0 auto;
  background-color: #fbf5f5;
  border-radius: 15rpx;

}
.detail .will{
  height: 60rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  border: 5rpx solid red;
  color: black;
  text-align: justify;  
  border-radius: 20rpx;
}
.detail .label {
  height: 60rpx;  
  font-size: 30rpx;
  line-height: 60rpx;  
  background-color: #3cedef;
  color: white;
  text-align: justify;
  border-radius: 20rpx;  
}
.detail .price {
  color: red;
  font-size: 40rpx;
  margin: 10rpx;
}

.line {
  width: 100%;
  height: 2rpx;
  display: inline-block;
  margin: 20rpx 0rpx;
  background-color: gainsboro;
  text-align: center;
}
button {
  color: gray;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  border-radius: 0rpx;
  width: 50%;
  height: 100%;
  line-height: 100rpx;
}
.button-share{
  border-right: 1rpx solid gray;
}
button::after {
  border: none;
}
.button-green {


}
text {
  display: block;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  margin: 10rpx;
}
.text-remark {
  display: block;
  font-size: 25rpx;
  margin: 10rpx;
}
.detail-nav {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 1;
  width: 100%;
  height: 110rpx;
  font-size: 50rpx;
  border-top: 0.5rpx solid gray;
}
.detail-nav .share{
  position: absolute;
  left: 60rpx;
  width: 50rpx;
  height: 50rpx;
}
.footer{
  position: fixed;
  bottom: 0;
  right: 0;
  display: flex;
  z-index: 100;
  flex-direction: row;
  align-items: center;
  width: 100%
}