/* pages/index/index.wxss */
page {
  background-color: #f7f7f7;
}
.slide-image{
  width: 100% 
}
.search
{
  align-items: center;
  width:100%;
  height:74rpx;
  background-color:#1296db;
  box-sizing: border-box;
  padding-left: 5rpx;
}

/* 搜索框提示文字样式 */
.searchItem{
  position: absolute;
  width: 100%;
  display: flex;
  flex-direction: row;  
  justify-content: center;
}
.search input
{
  width: 68%; 
  font-size:27rpx;
  font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  padding-left:70rpx; 
  height:60rpx;
  background-color:whitesmoke;
  border-radius: 13rpx;
 
}
/* 搜索框小图标样式 */
.search image
{ 
  position: relative;
  top: 10rpx;
  left: 65rpx;
  width: 42rpx;
  height:45rpx;
  border-left: 0;
}
/* 物品分类 */
.sort{
  width: 100%; 
  margin-top: 20rpx; 
}
.sort .sort-item{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  background-color: white;
  width :97%;
  height: 200rpx;
  margin: 0 auto;
  border-radius: 15rpx;
}
.sort .sort-item .item{
  width: 100rpx;
  height: 174rpx;
  background-color: white;
}
.sort .sort-item .item image{
  background-color: rgba(88, 76, 76, 0.062);
  width: 100%;
  height: 100rpx;
  border-radius: 15rpx;
  
}
.sort .sort-item .item text{
  color: #949494;
  display: block;
  line-height: 70rpx;
  text-align: center;
  font-size: 32rpx;
}
.detail{
  width: 100%;
}
.detail .detail-item{
  display: flex;
  flex-direction: column;
  background-color: white;
  width :86%;
  margin: 15rpx auto;
  border-radius: 15rpx;
  padding: 10rpx 30rpx;

}
.detail .detail-item .title {
  width: 100%;
  text-align: center;
  font-size: 36rpx;
}
.detail .detail-item .content{
  font-size: 28rpx;
}
.detail .detail-item .img {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.detail .detail-item .img image{
  width: 80%;
  height: 250rpx;
}
.detail .detail-item .item{
  margin-top: 10rpx; 
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  font-size: 27rpx;
}
.detail .detail-item .item .time{
  color: #999999;
}
.detail .detail-item .item .isSold{
  color: #5eb4ba
}

.detail .detail-item .line{
  margin: 0 auto;
  width: 99%;
  height: 4rpx;
  background-color: #D8D8D8;
}
