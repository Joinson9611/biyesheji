/* pages/user/user.wxss */
.login{
  width: 100%;
  height: 360rpx;
  background-color: rgb(0, 238, 255);
  padding-top: 25rpx;
  box-sizing: border-box;

}
.login .avatar{
  display: block;
  margin: 0 auto;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  background-color: white;
  border: 3rpx solid #707070
  
}
.login .nickName{
  margin:20rpx auto;
  text-align: center;
  width: 100%;
  height: 40rpx
}
.login .nickName .txt{
  color: #300b3a75;
  font-family: KaiTi;
}
.login .loginBtn{
  top: 20rpx;
  background-color: #3385ff;
  color:whitesmoke;
  display: block;
  width: 200rpx;
  height: 70rpx;
  font-size: 28rpx;
  border-radius: 20rpx;
}
.forMe{
  width: 100%;
  height: 472rpx;
  background-color: #eee9e7;
  padding-bottom: 9rpx;
}
.forMe .item{
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 96%;
  height: 88rpx;
  background-color: #fafafa;
  padding-left: 20rpx;
  margin-bottom: 8rpx;
  border-radius: 2rpx;
}
.forMe .item image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.forMe .item .txt{
  font-size: 28rpx;
  color: #8a8a8a
}